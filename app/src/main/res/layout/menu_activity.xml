<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".menu_MainActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginStart="40dp"
            android:layout_marginVertical="33dp"
            app:srcCompat="@drawable/logo" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:background="@drawable/fondob"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="60dp"
            android:layout_height="17dp"
            android:layout_margin="15dp"
            android:layout_weight="0.1"
            android:background="@drawable/custom_button4" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="350dp"
            android:layout_height="90dp"
            android:layout_weight="0.1"

            android:textAlignment="center"
            android:text="Menú"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:fontFamily="@font/sanssemibold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:paddingHorizontal="30dp">

            <LinearLayout
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="6dp"
                android:background="@drawable/menubuttons"
                android:orientation="vertical"
                android:gravity="center"
                android:onClick="goToBuy"
                >
                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/icon__1_"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="50dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="60dp"
                    android:background="@drawable/custom_button4"
                    android:fontFamily="@font/sanssemibold"
                    android:onClick="goToBuy"
                    android:paddingTop="5dp"
                    android:text="Realizar venta"
                    android:textAlignment="center"
                    android:textColor="#3C7558"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    app:backgroundTint="@null"></TextView>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/btnBuscar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/menubuttons"
                android:gravity="center"
                android:onClick="PantallaBuscar">
                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="50dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    app:srcCompat="@drawable/registroventas"
                    />
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="25dp"

                    android:paddingTop="5dp"
                    android:layout_marginBottom="60dp"

                    android:fontFamily="@font/sanssemibold"
                    android:textColor="#3C7558"
                    android:text="Registro de ventas"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    app:backgroundTint="@null"
                    android:background="@drawable/custom_button4">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="5"
            android:gravity="bottom"
            android:paddingHorizontal="30dp">

            <LinearLayout
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/menubuttons"
                android:gravity="center"
                android:onClick="productos"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="50dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    app:srcCompat="@drawable/registroventas" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="60dp"
                    android:background="@drawable/custom_button4"
                    android:fontFamily="@font/sanssemibold"
                    android:paddingTop="5dp"
                    android:text="Almacén"
                    android:textAlignment="center"
                    android:textColor="#3C7558"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    app:backgroundTint="@null"></TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/menubuttons"
                android:gravity="center"
                android:onClick="clientes"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="50dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    app:srcCompat="@drawable/cliente" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="60dp"
                    android:background="@drawable/custom_button4"
                    android:fontFamily="@font/sanssemibold"
                    android:paddingTop="5dp"
                    android:text="Clientes"
                    android:textAlignment="center"
                    android:textColor="#3C7558"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    app:backgroundTint="@null"></TextView>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:paddingHorizontal="30dp">

            <LinearLayout
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/menubuttons"
                android:orientation="vertical"
                android:gravity="center"
                android:onClick="goToFirst">
                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="50dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    app:srcCompat="@drawable/contabilidad"/>
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:paddingTop="5dp"
                    android:layout_marginBottom="60dp"
                    android:fontFamily="@font/sanssemibold"
                    android:textColor="#3C7558"
                    android:text="Contabilidad"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    app:backgroundTint="@null"
                    android:background="@drawable/custom_button4">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/menubuttons"
                android:orientation="vertical"
                android:gravity="center"
                android:onClick="goToFirst">
                <ImageView
                    android:id="@+id/b_img_ayuda"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="40dp"
                    android:layout_marginTop="50dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    app:srcCompat="@drawable/ayuda"/>
                <TextView
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:paddingTop="5dp"
                    android:layout_marginBottom="60dp"
                    android:fontFamily="@font/sanssemibold"
                    android:textColor="#3C7558"
                    android:text="Ayuda"
                    android:textAlignment="center"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    app:backgroundTint="@null"
                    android:background="@drawable/custom_button4">
                </TextView>
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6" />
    </LinearLayout>

</LinearLayout>